# cd
alias ..="cd ../"
alias ...="cd ../../"
alias ....="cd ../../../"

# list
alias la="ls -A"
alias lrt="ls -lrta"

# Vim
alias ,myvimrc="vim $HOME/.vimrc"
alias ,vimrc="vim $HOME/.vimrc"
alias cdvim="cd $HOME/.vim"

# Trash folder
alias cdt="cd $HOME/.local/share/Trash/files"
# C++ programing language directory
alias cdcpp="cd $HOME/Working/cpp"

# reads manpage without installing package
# $1 is package
# $2 is manpage name in package
alias dman="debman -p $1 $2"

# trash
trash_executabe=$(which trash)
if [ -x "$trash_executabe" ] ; then
	alias rm=trash-put
else
	alias rm=trash-put
fi

# comma quick open
alias ,alias="vim $HOME/.bashrc_aliases"
alias ,bashrc="vim $HOME/.bashrc"

# Copy use: echo 'copy to my clipboard' | pbcopy
alias pbcopy="xsel --clipboard --input"
alias pbpaste="xsel --clipboard --output"

# node
alias cdn="cd ~/Working/node/"
alias cdnode="cd ~/Working/node/"
# working
alias cdW="cd ~/Working/"
# scripts
alias cdS="cd ~/Scripts/"
# R
alias cdR="cd ~/Working/R/"
# dotfile
alias cd.="cd ~/dotfiles"
# clojure
alias cdclj="cd ~/Working/clojure/"
alias cdcljs="cd ~/Working/clojurescript/"
alias cdclojure="cd ~/Working/clojure/"
# emacs
alias cdem="cd $HOME/.emacs.d/"
alias cdeml="cd $HOME/.emacs.d/lisp/"
alias em="emacs"

#personal computer
alias cdch="cd $HOME/panono/charts"
alias cdapi="cd $HOME/panono/apiserver"
alias cdcl="cd $HOME/panono/cloud-angular"
alias cds="cd $HOME/panono/stitcher"
alias cdti="cd $HOME/panono/tiler"
