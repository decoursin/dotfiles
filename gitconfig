	name = decoursin
[core]
	excludesfile = ~/.gitignore
	editor = vim
[apply]
	whitespace = nowarn
[merge]
	tool = gvimdiff
[alias]
	st = status
	co = checkout
	g = grep
	logbt = log HEAD..origin/master
	logbetween = log HEAD..origin/master
	count = !git shortlog -sn
	pretty = log --graph --oneline --all --decorate
	lg = log --date=short --pretty=format:"%C(124)%ad %C(24)%h %C(34)%an %C(252)%s%C(178)%d"
[push]
	default = simple
	followTags = true
[diff]
	tool = gvimdiff
	guitool = meld
[difftool]
	prompt = false
[color]
